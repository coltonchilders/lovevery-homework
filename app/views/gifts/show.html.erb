<article class="p-3">
  <% if @gift.paid? %>
    <h1>Thanks for Your Order!</h1>
  <% else %>
    <h1>Problem with your order</h1>
  <% end %>
  <section class="card border rounded rounded-lg <%= @gift.paid? ? 'bg-success' : 'bg-danger' %> text-light">
    <div class="card-body">
      <h2 class="card-title h4">Order <span class="font-weight-normal h5">#<%= @gift.user_facing_id %></span></h2>
      <h3 class="card-subtitle text-white font-weight-lighter h5 mb-2">
        <%= @gift.product.name %>
        for
        <strong><%= @gift.child.full_name %></strong>
      </h3>
      <% if @gift.message.present? %>
        <h4 class="card-subtitle text-white font-weight-normal h6 mb-2">
          Message: <%= @gift.message %>
        </h4>
      <% end %>
      <p class="card-text">
        <% if @gift.paid? %>
          Paid <span class="text-white font-weight-bold"><%= number_to_currency(@gift.product.price_cents / 100) %></span> on <%= @gift.created_at.strftime("%B %d, %Y") %>.
        <% else %>
          Unable to charge <%= number_to_currency(@gift.product.price_cents / 100) %>. Please contact us.
        <% end %>
      </p>
    </div>
  </section>
</article>
